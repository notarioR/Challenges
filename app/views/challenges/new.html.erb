
<section class="center">
<div class="flash">
<%= flash[:error] %>
</div>

  <h1>New Challenge</h1>
  <%= form_for [@challenge], html: {multipart: true} do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <br>
    <%= f.label :poster %>
    <%= f.file_field :poster %>
    <br>
    <%= f.label :description %>
    <%= f.text_area :description %>
    <%= f.submit 'Save' %>
  <% end %>

<section>
 <button><%= link_to("Back to challenges", challenges_path) %></button>
</section>

</section>

